.listing-show-header
	.actions
		- if can? :update, Habitant
			= link_to edit_admin_habitant_path(@habitant), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @habitant.full_name
		%table.bordered
			%tbody
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
					%td
						.display-value.fs-body-1.tc-black-2= @habitant.id
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.identification")
					%td
						.display-value.fs-body-1.tc-black-2= @habitant.identification.blank? ? '----------' : @habitant.identification
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.full_name")
					%td
						.display-value.fs-body-1.tc-black-2= @habitant.full_name.blank? ? '----------' : @habitant.full_name
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.phone")
					%td
						.display-value.fs-body-1.tc-black-2= @habitant.phone.blank? ? '----------' : @habitant.phone
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.email")
					%td
						.display-value.fs-body-1.tc-black-2= @habitant.email.blank? ? '----------' : @habitant.email
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.address")
					%td
						.display-value.fs-body-1.tc-black-2= @habitant.address.blank? ? '----------' : @habitant.address
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_habitants_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
