%tr{ id: "row-#{habitant.id}" }
	- if can? :destroy_multiple, Habitant
		%td.center.item-check
			= link_to '', admin_habitant_path(habitant), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{habitant.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{habitant.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{habitant.id}" }

	%td.center
		= link_to '', admin_habitant_path(habitant, search: @query), remote: true, class: 'show-row'
		%span
			= habitant.identification
	%td.center
		= link_to '', admin_habitant_path(habitant, search: @query), remote: true, class: 'show-row'
		%span
			= habitant.full_name
	%td.center
		= link_to '', admin_habitant_path(habitant, search: @query), remote: true, class: 'show-row'
		%span
			= habitant.phone
	%td.center
		= link_to '', admin_habitant_path(habitant, search: @query), remote: true, class: 'show-row'
		%span
			= habitant.email
	%td.center.btn-w5
		= link_to admin_habitant_path(habitant), class: 'btn-floating waves-effect btn-flat', 'data-toggle': 'tooltip', 'data-placement': 'bottom', title: 'Show' do
			= material_icon.md_24.remove_red_eye.css_class('md-dark')
