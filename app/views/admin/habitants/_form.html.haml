.wrapper
	.wrapper-body.container
		.actions
			= link_to admin_habitants_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for [:admin, @habitant] do |f|
						.row
							.col.l6.m12
								= f.input :identification, input_html: {min: 0}
							.col.l6.m12
								= f.input :full_name
							.col.l6.m12
								= f.input :phone
							.col.l6.m12
								= f.input :email
							.col.l6.m12
								= f.input :address, input_html: {class: "materialize-textarea"}
							.col.l6.m12
								.form-actions.right
									= f.button :submit, t("keppler.actions.save"), name: '_save'
									= f.button :submit, t("keppler.actions.save_and_add_another"), name: '_add_other'
