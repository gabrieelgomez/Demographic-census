.listing-show-header
	.actions
		- if can? :update, Download
			= link_to edit_admin_download_path(@download), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @download.title.to_s.humanize
		%center= image_tag @download.pdf
		%table.bordered
			%tbody
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
					%td
						.display-value.fs-body-1.tc-black-2= @download.id
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.title")
					%td
						.display-value.fs-body-1.tc-black-2= @download.title.blank? ? '----------' : @download.title
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.description")
					%td
						.display-value.fs-body-1.tc-black-2= @download.description.blank? ? '----------' : @download.description
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_downloads_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
